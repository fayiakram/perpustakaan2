<!-- Add Book -->
<div class="modal fade" id="addBookModal" tabindex="-1" role="dialog" aria-labelledby="addBookModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-white" id="addBookModalLabel">Add Book</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <form id="addbook-form">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title_modal" placeholder="Enter title">
                    </div>
                    <div class="form-group">
                        <label for="author">Author</label>
                        <input type="author" class="form-control" id="author_modal" placeholder="Enter author name">
                    </div>
                    <div class="form-group">
                        <label for="publish year">Publish Year</label>
                        <input type="publish year" class="form-control" id="publish year_modal"
                            placeholder="Enter publish year">
                    </div>
                    <div class="form-group">
                        <label for="genre">Genre</label>
                        <input type="publish year" class="form-control" id="publish year_modal"
                            placeholder="Enter genre">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="publish year" class="form-control" id="publish year_modal"
                            placeholder="Enter Description">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Update Book -->
<div class="modal fade" id="updateBookModal" tabindex="-1" role="dialog" aria-labelledby="addBookModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-white" id="addBookModalLabel">Update</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Add your login form here -->
                <form id="-form">
                    <div class="form-group">
                        <label for="title">
                            Title
                        </label>
                        <input type="text" class="form-control" id="title_modal" placeholder="Enter title"
                            value="<%= data.title=%>">
                    </div>
                    <div class="form-group">
                        <label for="author">
                            Author
                        </label>
                        <input type="author" class="form-control" id="author_modal" placeholder="Enter author name"
                            value="<%= data.author=%>">
                    </div>
                    <div class="form-group">
                        <label for="publish year">
                            Publish Year
                        </label>
                        <input type="publish year" class="form-control" id="publish year_modal"
                            placeholder="Enter publish year" value="<%= data.publish_year=%>">
                    </div>
                    <div class="form-group">
                        <label for="genre">
                            Genre
                        </label>
                        <input type="genre" class="form-control" id="genre_modal" placeholder="Enter genre"
                            value="<%= data.genre=%>">
                    </div>
                    <div class="form-group">
                        <label for="description">
                            Description
                        </label>
                        <input type="publish year" class="form-control" id="publish year_modal"
                            placeholder="Enter Description" value="<%= data.description=%>">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>